@model IEnumerable<ventasP2Web.Models.cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Crear cliente", "Create")
</p>
<p>
    @Html.ActionLink("Ver condiciones de pago", "Index","metodoPagos")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.clienteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigoPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.limiteCredito)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccionFisica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.metodoPago.condicion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.clienteID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codigoPostal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.limiteCredito)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccionFisica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.metodoPago.condicion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.clienteID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.clienteID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.clienteID })
        </td>
    </tr>
}

</table>